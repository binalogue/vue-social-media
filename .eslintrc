{
  "root": true,
  "env": {
    "browser": true,
    "node": true
  },
  "globals": {},
  "parserOptions": {
    "parser": "babel-eslint"
  },
  "extends": [
    "@nuxtjs",
    "prettier",
    "prettier/vue",
    "plugin:prettier/recommended"
  ],
  "plugins": ["prettier"],
  "rules": {
    "no-console": "off",
    "unicorn/number-literal-case": "off",
    "vue/no-v-html": "off"
  },
  "overrides": [
    {
      "files": ["*.vue"],
      "rules": {
        "indent": "off"
      }
    }
  ],
  "settings": {
    "import/resolver": {
      "node": {
        "extensions": [".js", ".vue"],
        "moduleDirectory": ["src", "node_modules"]
      }
    }
  }
}
